import numpy as np
import matplotlib.pyplot as plt
from sklearn.linear_model import LinearRegression
from sklearn.preprocessing import PolynomialFeatures
from sklearn.metrics import mean_squared_error
# Sample non-linear dataset
X = np.array([[1], [2], [3], [4], [5], [6]])
y = np.array([3, 6, 5, 10, 15, 18])
linear_model = LinearRegression()
linear_model.fit(X, y)
y_linear_pred = linear_model.predict(X)
poly = PolynomialFeatures(degree=2)
X_poly = poly.fit_transform(X)
poly_model = LinearRegression()
poly_model.fit(X_poly, y)
y_poly_pred = poly_model.predict(X_poly)
mse_linear = mean_squared_error(y, y_linear_pred)
mse_poly = mean_squared_error(y, y_poly_pred)
print("Linear Regression MSE:", mse_linear)
print("Polynomial Regression MSE:", mse_poly)
plt.scatter(X, y, color='black', label='Actual Data')
plt.plot(X, y_linear_pred, label='Linear Regression', color='blue')
plt.plot(X, y_poly_pred, label='Polynomial Regression (Degree 2)', color='red')
plt.xlabel("X")
plt.ylabel("y")
plt.title("Linear vs Polynomial Regression")
plt.legend()
plt.show()
